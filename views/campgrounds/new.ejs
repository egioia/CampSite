<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center">Agregar nuevo camping</h1>
		<div style="width: 30%; margin:25px auto">
			<form action="/campings" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="camping[name]" placeholder="Nombre">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camping[image]" placeholder="Imagen">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camping[description]" placeholder="Descripcion">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
				</div>
			</form>
			<a href="/campings">Atras</a>
		</div>
		
	</div>
</div>

<%- include ("../partials/footer") %>
