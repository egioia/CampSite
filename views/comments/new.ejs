<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center">Agregar nuevo comentario en <%= camping.name %></h1>
		<div style="width: 30%; margin:25px auto">
			<form action="/campings/<%= camping._id%>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
				</div>
			</form>
			<a href="/campings/<%= camping._id%>">Atras</a>
		</div>
		
	</div>
</div>

<%- include ("../partials/footer") %>

